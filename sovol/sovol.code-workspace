let userId = null;
let earnings = 0;
let adShownToday = false;
let clickCount = 0;

// DOM elements
const registerBtn = document.getElementById('registerBtn');
const nameInput = document.getElementById('nameInput');
const usernameInput = document.getElementById('usernameInput');
const questionSection = document.getElementById('questionSection');
const questionText = document.getElementById('questionText');
const optionsDiv = document.getElementById('options');
const nextQuestionBtn = document.getElementById('nextQuestionBtn');
const earningsBox = document.getElementById('earningsBox');
const earningsEl = document.getElementById('earnings');
const adminPanel = document.getElementById('adminPanel');
const addQuestionBtn = document.getElementById('addQuestionBtn');

let currentQuestion = null;

// --- User register ---
registerBtn.onclick = async () => {
    const name = nameInput.value.trim();
    const username = usernameInput.value.trim();
    if (!name || !username) return alert('To\'liq kiriting');
    // demo: random userId
    userId = Math.floor(Math.random() * 1000000);
    document.getElementById('user-info').classList.add('hidden');
    questionSection.classList.remove('hidden');
    earningsBox.classList.remove('hidden');
    showNextQuestion();
    showAd();
};

// --- Fetch question ---
async function showNextQuestion() {
	// demo: random question
    const questions = [
		{ text: '5+7=?', opts: ['10', '12', '13', '14'
			], answer: 1
		},
		{ text: 'Oâ€˜zbekiston poytaxti?', opts: ['Toshkent', 'Samarqand', 'Buxoro', 'Nukus'
			], answer: 0
		},
		{ text: 'H2O formulasi nimaga teng?', opts: ['Suv', 'Havo', 'Oksigen', 'Karbon'
			], answer: 0
		}
	];
    currentQuestion = questions[Math.floor(Math.random() * questions.length)
	];
    questionText.innerText = currentQuestion.text;
    optionsDiv.innerHTML = '';
    currentQuestion.opts.forEach((opt, i) => {
        const btn = document.createElement('button');
        btn.innerText = opt;
        btn.onclick = () => {
            if (i === currentQuestion.answer) {
                earnings += 100;
                alert('To\'g\'ri! 100 som');
			}
            else alert('Xato');
            earningsEl.innerText = earnings;
		};
        optionsDiv.appendChild(btn);
	});
}

nextQuestionBtn.onclick = showNextQuestion;

// --- Show ad once per day ---
function showAd() {
    if (adShownToday) return;
    alert('Reklama: Siz 100som oldingiz!');
    earnings += 100;
    earningsEl.innerText = earnings;
    adShownToday = true;
}
// --- Admin panel trigger (3 click) ---
document.body.onclick = () => {
    clickCount++;
    if (clickCount >= 3) {
        const pass = prompt('Admin parol kiriting:');
        if (pass === 'behruz12') adminPanel.classList.toggle('hidden');
        clickCount = 0;
	}
};

// --- Admin add question ---
addQuestionBtn.onclick = () => {
    const text = document.getElementById('qText').value;
    const opts = [
        document.getElementById('opt1').value,
        document.getElementById('opt2').value,
        document.getElementById('opt3').value,
        document.getElementById('opt4').value
	];
    const answerIndex = parseInt(document.getElementById('correctIndex').value);
    alert(Savol qo'shildi: ${text
	});
    // demo: serverga POST qilish kerak
};